!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Book Store
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #authorization
    .container
      .col-md-3
        .menu
          %h2=link_to "Home", root_path
          - if admin_signed_in?
            %h2=link_to "Carts", carts_path
            %h2=link_to "Authors", authors_path
          %h2 
            Categories:
            %br
            - if admin_signed_in?
              = link_to "New +", new_category_path, class: "btn btn-default"
          - @categories = Category.all
          - @categories.each do |cat|
            %ul
              %li
                %h3
                  = link_to "#{cat.title}", cat
                  %br
                  - if admin_signed_in?
                    .btn-group
                      = link_to "x", category_path(cat), method: :delete, class: "btn btn-danger", data: { confirm: "Are u sure?" }
                      = link_to "Edit", edit_category_path(cat), class: "btn btn-info"  
          %hr            
          - if admin_signed_in?
            = link_to "Log out", destroy_admin_session_path, method: :delete, class: "btn btn-default btn-default"
          - else
            %button.btn.btn-default.btn-lg{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
              Log in

        #myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-dialog.modal-md{:role => "document"}
            .modal-content
              .modal-body
                = render "devise/sessions/new"
      .data.col-md-offset-3  
        .search-field
          = form_tag search_path, method: :get do 
            .col-sm-7
              = text_field_tag :title, "", class: "form-control col-sm-4", witdth: 20
            = submit_tag "Search", class: "btn btn-default"    
        .cart.col-md-offset-7
          - unless admin_signed_in?
            - if session[:cart_id]
              = link_to image_tag("https://www.ugvermont.com/sites/default/files/imagepicker/1/cart-full_0.png", width: 100, height: 100), cart_path(session[:cart_id]), class: "btn btn-default pic"
        .col-md-12      
          %br
          .col-md-3
            = render_breadcrumbs
          .col-md-7  
            .alert
              .alert-success
                = flash[:success]
              .alert-danger
                = flash[:error]
        = yield          
