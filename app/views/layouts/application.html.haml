!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Book Store
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      .col-md-3
        .menu
          %h2=link_to "Home", root_path
          - if admin_signed_in?
            %h2=link_to "Carts", carts_path
            %h2=link_to "Authors", authors_path
          %h2 
            Categories:
            %br
            - if admin_signed_in?
              = link_to "New +", new_category_path, class: "btn btn-default"
          - @categories = Category.all
          - @categories.each do |cat|
            %ul
              %li
                %h3
                  = link_to "#{cat.title}", cat
                  %br
                  - if admin_signed_in?
                    .btn-group
                      = link_to "x", category_path(cat), method: :delete, class: "btn btn-danger", data: { confirm: "Are u sure?" }
                      = link_to "Edit", edit_category_path(cat), class: "btn btn-info"  
          %hr            
          - if admin_signed_in?
            = link_to image_tag("http://printreranduri.eu/wp-content/uploads/OUT_High.jpg", :width => 100, :height => 40), destroy_admin_session_path, method: :delete
          - else
            = link_to image_tag("http://keithcraft.org/wp-content/uploads/2015/02/KijdLzeiq.jpeg", :width => 100, :height => 40), new_admin_session_path            
      .data.col-md-offset-3  
        .search-field
          = form_tag search_path, method: :get do 
            .col-sm-7
              = text_field_tag :title, "", class: "form-control col-sm-4", witdth: 20
            = submit_tag "Search", class: "btn btn-default"    
        .cart.col-md-offset-7
          - unless admin_signed_in?
            - if session[:cart_id]
              = link_to image_tag("https://www.ugvermont.com/sites/default/files/imagepicker/1/cart-full_0.png", width: 100, height: 100), cart_path(session[:cart_id]), class: "btn btn-default pic"
        .col-md-12      
          %br
          .col-md-3
            = render_breadcrumbs
          .col-md-7  
            .alert
              .alert-success
                = flash[:success]
              .alert-danger
                = flash[:error]
        = yield          
         

