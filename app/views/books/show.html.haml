.col-md-8
  %h1= @book.title
  = link_to '<- Back', :back 
  .book
    .container
      .image
        = image_tag "http://www.bookzone.com.ua/images2/47465.jpg"
      .info
        %b Authors:
        = form_tag author_search_list_path, :method => "get" do
          = text_field_tag :author_name
          = hidden_field_tag :book_id, @book.id
          = submit_tag "Add", class: "btn btn-primary"
        - @authors.each do |a|
          = link_to "#{a.name}", author_path(a.id)  

    .conrainer
      .about
        %h3 Description
        %p= @book.about    